{
  "manifest_version": 3,
  "background": { "service_worker": "background/index.ts" },
  "content_scripts": [
    {
      "js": ["content/index.ts"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "action": {
    "default_popup": "pages/popup/index.html",
    "default_icon": {
      "34": "icon34.png",
      "128": "icon34.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}
